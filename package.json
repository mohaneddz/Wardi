{
	"name": "wardi",
	"version": "1.0.0",
	"type": "module",
	"description": "Learning node, express and mongoDB",
	"main": "app.js",
	"scripts": {
		"dev": "nodemon server.js",
		"start:dev": "npm-run-all --parallel devserver watch:scss",
		"watch:scss": "sass public/scss/main.scss public/css/style.css -w",
		"build:scss": "sass public/scss/main.scss public/css/style.css",
		"devserver": "npm-run-all --parallel dev --browser=\"C:/Program Files/Firefox Developer Edition/firefox.exe\"",
		"start": "node server.js",
		"pugg": "pug -w ./views -o ./public -P",
		"view": "npm-run-all --parallel pugg watch:scss",
		"build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js"
	},
	"author": "Mohaned Manaa",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.7.7",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"cloudinary": "^2.4.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"core-js": "^3.38.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"html-to-text": "^9.0.5",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.8.0",
		"mongoose": "^8.6.0",
		"mongoose-lean-virtuals": "^0.9.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.4",
		"node-cron": "^3.0.3",
		"nodemailer": "^6.9.14",
		"pm2": "^5.4.2",
		"pug": "^3.0.3",
		"regenerator-runtime": "^0.14.1",
		"sass": "^1.77.8",
		"sharp": "^0.33.5",
		"slugify": "^1.6.6",
		"validator": "^13.12.0",
		"xss-clean": "^0.1.4"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"nodemon": "^3.1.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3"
	}
}
