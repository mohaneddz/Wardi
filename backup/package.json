{
	"name": "wardi",
	"version": "1.0.0",
	"description": "Learning node, express and mongoDB",
	"main": "app.js",
	"scripts": {
		"dev": "nodemon server.js",
		"start:prod": "NODE_ENV=production nodemon server.js",
		"debug": "ndb server.js",
		"watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
		"start:dev": "npm-run-all --parallel watch:scss dev",
		"watch:scss": "sass public/scss/main.scss public/css/style.css -w",
		"compile:scss": "sass public/scss/main.scss public/css/style.comp.css",
		"build:js": "parcel build public/js/index.js public/scripts/*.js --out-dir ./public/js --out-file bundle.js --dist-dir dist/scripts",
		"concat:css": "concat -o public/css/style.concat.css public/css/style.comp.css",
		"prefix:css": "postcss public/css/style.concat.css --use autoprefixer -b 'last 10 versions' -o public/css/style.prefix.css",
		"compress:css": "postcss public/css/style.prefix.css --use cssnano -o dist/css/style.min.css",
		"build:css": "npm-run-all compile:scss concat:css prefix:css compress:css",
		"devserver": "npm-run-all --parallel dev --browser=\"C:/Program Files/Firefox Developer Edition/firefox.exe\" browsersync watch:pug",
		"start": "npm-run-all --parallel devserver watch:scss dev",
		"start parcel": "parcel public/index.html",
		"build": "npm-run-all build:css build:js",
		"watch:pug": "pug -P -w views -o public"
	},
	"author": "Mohaned Manaa",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.7.5",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"connect-livereload": "^0.6.1",
		"cookie-parser": "^1.4.6",
		"core-js": "^3.38.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"html-to-text": "^9.0.5",
		"jsonwebtoken": "^9.0.2",
		"livereload": "^0.9.3",
		"mongoos": "^0.0.1-security",
		"mongoose": "^8.5.4",
		"morgan": "^1.10.0",
		"multer": "^1.4.4",
		"nodemailer": "^6.9.14",
		"pug": "^3.0.3",
		"regenerator-runtime": "^0.14.1",
		"sass": "^1.77.8",
		"sharp": "^0.33.5",
		"slugify": "^1.6.6",
		"stripe": "^16.8.0",
		"validator": "^13.12.0",
		"xss-clean": "^0.1.4"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.20",
		"browser-sync": "^3.0.2",
		"concat": "^1.0.3",
		"cssnano": "^7.0.5",
		"eslint": "^8.2.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.9.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.35.0",
		"nodemon": "^3.1.4",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.12.0",
		"postcss-cli": "^11.0.0",
		"prettier": "^3.3.3",
		"pug-cli": "^1.0.0-alpha6"
	},
	"engines": {
		"node": "^10"
	}
}
