.quran 
    .toggle
        i(class="fi fi-rr-menu-burger")

    if mode === "QuranChapter" 
        h1.quran__title= readerTitle
        // remove basmallah if surah is 9 or 1
        if this_chapter.chapter !== 9 && this_chapter.chapter !== 1
            h2.quran__basmallah 7
        p.quran__verse
            each verse, index in this_chapter.verses
                span(id=`verse-${index + 1}`)= `${verse.text} ${index + 1} `.replace(/\d/g, d => '٠١٢٣٤٥٦٧٨٩'[d])

    else if mode === "QuranJuz"
        h1.quran__title= readerTitle
        // remove basmallah if surah is 9 or 1
        //- if this_juz.juz !== 9 && chapter.chapter !== 1
        h2.quran__basmallah 7
        p.quran__verse
            each chapter, index in this_juz.chapters
                span(id=`verse-${index + 1}`)= `${chapter.text} ${index + 1} `.replace(/\d/g, d => '٠١٢٣٤٥٦٧٨٩'[d])