.user
    h2 My Account

    form(enctype="multipart/form-data")
        .user__info
            .user__info--photo
                h3 Profile Picture: 
                if user.photo !== ""
                    img(src=`/img/users/${user.photo}` alt='Profile photo' width="100" height="100" onclick="document.getElementById('photoInput').click()" class="profile-img")
                else 
                    img(src='/img/default-user.png' alt='Profile photo' width="100" height="100" onclick="document.getElementById('photoInput').click()" class="profile-img")
                input(type="file" name="photo" id="photoInput" style="display: none;" accept="image/*")
                span.tooltip-text Click to change your profile picture.
            .user__info--username
                h3 Username: 
                input(type="text" name="username" value=user.username required id="username")
            .user__info--email
                h3 Email: 
                input(type="email" name="email" value=user.email required id="email")
            .user__info--password
                h3 Password: 
                input(type="password" name="password" placeholder="Enter new password" minlength="8" id="password")
                p Leave blank to keep your current password.
            .user__info--confirm_password
                h3 New Password: 
                input(type="password" name="newPassword" placeholder="Enter a new password" minlength="8" id="newPassword")
                p Forgot your password? <a href="/forgotpassword" class='link'>Click here</a> to reset it.              
                    // TODO - Add the forgot password route

            .user__info--bookmarks
                h3 Bookmarks
                a(href=`/user/bookmarks` class="buttonlike" id="bookmarksbtn") View Your Bookmarks

