extends base

block append head
  - var title = 'Quran Reading'
  - var bodyClass = 'landing'
  - var mainClass = 'mainlanding'

block content
    .title
        h1.title__main وردي
        h2.title__sub شفيع دربي

    .cuts
        .cuts__quran اقرأ القرآن
        .cuts__hadith اقرأ الحديث
        .cuts__tafsir اقرأ التفسير       
            
    .cards
        //- card for each surah : this is a template as of now
        for chapter in chapters
            .cards__surah 
                p.cards__surah__info__order #{chapter.id}
                h3.cards__surah__name #{chapter.name}
                .cards__surah__info
                    p.cards__surah__info__ayat #{chapter.ayat} آيات
                    p.cards__surah__info__type #{chapter.type}
                    p.cards__surah__info__fav
                        a(href="#") &hearts; 


