.Lsidebar 
    h1= Ltitle
    .search
        input(type="text" placeholder="Search" class="Lsearch")
        a(class="LsearchButton")
            i(class="fi fi-rs-search")
    ul
        each Lelement in Llist
            li
                if Lmatching
                    if Lelement[Lselector] === Lparam[Lselector]
                        a(href=`${Lslug}${Lelement[Lselector]}` class="LsideEntry selectedEntry")= Lelement[Lname]
                    else
                        a(href=`${Lslug}${Lelement[Lselector]}` class="LsideEntry")= Lelement[Lname]
                else
                    a(href=`${Lslug}${Lelement[Lselector]}` class="LsideEntry")= Lelement[Lname]