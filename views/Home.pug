extends ./Layout/_base

block append head
  - var title = 'Quran Reading'
  - var bodyClass = 'Home'
  - var mainClass = 'mainHome'

block content
    .title
        h1.title__main وردي
        h2.title__sub شفيع دربي

    .cuts
        .cuts__quran اقرأ القرآن
        .cuts__hadith اقرأ الحديث
        .cuts__tafsir اقرأ التفسير       
            
    .cards
        //- card for each surah : this is a template as of now
        for chapter in chapters
            .cards__surah.hidden
                a.cards__surah__link(href=`/quran/chapter/${chapter.chapter}`)
                p.cards__surah__info__order #{chapter.chapter}
                h3.cards__surah__name #{chapter.name}
                .cards__surah__info
                    p.cards__surah__info__ayat #{chapter.verses.length} آيات
                    p.cards__surah__info__type #{chapter.info.revelation}
                    p.cards__surah__info__fav
                        a(href="#")
                            i(class="fi fi-rs-heart")